<style>
  #post-count {
    font-size: 25px;
  }
</style>

<h1>Uploaded Files</h1>
<div id="post-count">
  <% if @posts.any? %>
    <% if @posts.count == 1 %>
      1 File
    <% else %>
      <%= @posts.count %> Files
    <% end %>
  <% end %> <br>
</div>

<%
=begin%>
 <div class="input-group mb-3">
  <div class="input-group-prepend">
    <button class="btn btn-outline-secondary" type="button">Search</button>
  </div>
  <input type="text" class="form-control" placeholder="Search..." aria-label="" aria-describedby="basic-addon1">
</div> 
<%
=end%>

<%= form_tag posts_path, :method => "get" do %>
  <%= label_tag(:search, "Search") %>
  <%= text_field_tag :search, params[:search] %> 
  <%= submit_tag("Search") %>
<% end %>

<br><br>
<%= link_to "New file", new_post_path, class: "btn btn-outline-primary" %> 
<br>
<br>

<div id="posts">
  <% @posts.each do |post| %>
    <ul class="list-group">
      <li class="list-group-item">
        <%= link_to post.file.filename, post%>
        <% if post.file.created_at %>
        <p><%= post.file.created_at.strftime("%-d %b %Y %H:%M") %></p>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>


